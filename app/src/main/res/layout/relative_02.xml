<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cake"
        android:id="@+id/cake_imv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pebble Beach"
        android:id="@+id/pebble_tv"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_toRightOf="@id/cake_imv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="California"
        android:id="@+id/california_tv"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/pebble_tv"
        android:layout_toRightOf="@id/cake_imv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 miles away"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/california_tv"
        android:layout_toRightOf="@id/cake_imv"/>


</RelativeLayout>